{{!
    @template format_aruponepage/coursemodules

    This template renders action menu for each course.

    Example context (json):
    {
        "modules": "Course modules html",
        "editing": true,
        "nomodules": false,
        "section": 2
    }
}}
<div class="section-modules aruponepage-group {{#nomodules}}nomodules{{/nomodules}}" data-region="course-modules">
	{{#modules}}
		{{{.}}}
	{{/modules}}
    {{#editing}}
        <div
            data-region="module"
            data-module="0"
            data-module-section="{{section}}"
            class="aruponepage-group-item p-1 py-3  w-100
                border-bottom dropactivity
                activity"
        >
            <div class="pl-5">
                <div class="text-danger pl-5 ml-1">
                    {{#str}}emptysection, format_aruponepage{{/str}}
                </div>
            </div>
        </div>
    {{/editing}}
</div>