{{!
    @template format_aruponepage/change_number_sections

    This template renders action menu for each course.

    Example context (json):
    {
        "url": "http://moodle.site/course/changenum..",
        "newsections": 5
    }
}}

<div id="changenumsections">
    <a href="{{url}}" class="increase-sections" data-add-sections="{{#str}}addsections{{/str}}" {{#attributes}}{{name}}="{{value}}"{{/attributes}}>
        <i class="fa fa-plus-circle addsectionicon"></i>
        <span class="sr-only">{{#str}} addsections {{/str}}</span>
    </a>
</div>