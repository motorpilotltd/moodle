{{!
    @template format_aruponepage/multisectionpage

    This template renders action menu for each course.

    Example context (json):
    {
        "uniqid": 123456,
        "completioninfo": "completion help icon html",
        "courseactivityclipboard": "course activity clipboard html",
        "courseid": 3,
        "editing": true,
        "contextid": 2,
        "sections": [
            {
                "sectionnumber": 1,
                "visible": true,
                "mutedsection": false,
                "editing": true,
                "move": true,
                "availableinfo": true,
                "availabilitymsg": "Not available untill you complete..",
                "name": "Section 1",
                "completion": "<progress>..</progress>",
                "editsection": "<div class='dropdown'>..</div>",
                "expandbtn": true,
                "summary": "This is section 2",
                "accordion": false,
                "coursemodules": "Course modules HTML"
            }
        ]
    }
}}

<div id="format-aruponepage-{{uniqid}}" class="formataruponepagecontent w-100 {{{methodology}}}">
    {{{completioninfo}}}
    {{{courseactivityclipboard}}}
    <div class="accordion" id="formataruponepage" data-region="section-container" data-is-root="1" data-courseid="{{courseid}}">
        {{#sections}}
            <div id="section-{{sectionnumber}}"
                class="card border-0 b-0 section {{#visible}}bg-white{{/visible}}{{^visible}}bg-gray030{{/visible}}"
                data-region="section"
                data-sectionnumber="{{sectionnumber}}">
                <div
                    class="border-bottom section-header p-0
                        {{#mutedsection}} bg-gray030 {{/mutedsection}}
                        {{#visible}}bg-white{{/visible}}
                        {{#editing}}border-top border-bottom-0{{/editing}}
                        {{^editing}}border-0{{/editing}}"
                    id="heading{{sectionnumber}}"
                >
                    <div class="d-flex align-items-start">
                        {{#move}}
                            {{> format_aruponepage/movesection }}
                        {{/move}}
                        {{#moveplaceholder}}
                            {{^sectionzero}}
                            <span class="d-inline p-2 nomargin"><i class="icon fa fa-fw"></i></span>
                            {{/sectionzero}}
                        {{/moveplaceholder}}
                            {{#editing}}
                                {{^sectionzero}}
                                    <span class="px-2 nomargin"></span>
                                {{/sectionzero}}
                            {{/editing}}
                        <h3
                            class="sectionname flex-fill pt-4"
                        >
                            {{{name}}}
                        </h3>
                        {{#editing}}
                            {{^availableinfo}}
                                    <span class="iconlarge nomargin py-3 px-md-4"><i class="icon fa fa-fw"></i></span>
                            {{/availableinfo}}
                        {{/editing}}

                        {{#availabilitymsg}}
                            <span class="availability">
                                <button class="btn btn-link py-4 px-md-4 iconlarge nomargin popover-dismiss" data-toggle="popover" data-html="true" data-content="{{availabilitymsg}}">
                                    {{#pix}} i/lock, core {{/pix}}
                                </button>
                            </span>
                        {{/availabilitymsg}}

                        {{^availableinfo}}
                            <div class="pt-2 px-4 d-flex align-items-center">
                                {{{completion}}}
                            </div>
                        {{/availableinfo}}

                        {{#editing}}
                            <div class="editoptions ml-auto align-self-stretch d-flex flex-column px-2 py-3">
                                {{{editsection}}}
                            </div>
                        {{/editing}}
                    </div>

                    {{#summary}}
                        <div class="summary-section d-flex align-items-center">
                            {{#editing}}
                                {{^sectionzero}}
                                    <span class="px-3 nomargin"><i class="icon fa fa-fw"></i></span>
                                {{/sectionzero}}
                            {{/editing}}
                            <div class="sectionsummary pt-1 pb-4">
                                {{{summary}}}
                            </div>
                            {{#editing}}
                                <div class="editoptions ml-auto align-self-stretch">
                                </div>
                            {{/editing}}
                        </div>
                    {{/summary}}
                </div>

                <div
                    id="sectioncontent-{{sectionnumber}}"
                    class="sectioncontent"
                    aria-labelledby="section-{{sectionnumber}}"
                    data-sectionid="{{id}}"
                    data-sectionnumber="{{sectionnumber}}"
                    data-sectionname ="{{sectionname}}"
                >
                    <div class="card-body bg-white p-0 {{^editing}}pb-4{{/editing}}">
                        {{{coursemodules}}}
                    </div>
                </div>
            </div>
        {{/sections}}
        {{^showsection}}
            {{^editing}}
            <div class="d-flex my-4">
                <a href="{{{ startbuttonurl }}}" class="btn btn-primary">
                    {{#str}} startcourse, format_aruponepage {{/str}} {{#pix}} e/left_to_right, core {{/pix}}
                </a>
            </div>
            {{/editing}}
        {{/showsection}}
    </div>
    {{#addsection}}
        <div class="addsectionwrapper">
            {{{addsection}}}
        </div>
    {{/addsection}}
</div>
{{#js}}
require(
[
    'jquery',
    'format_aruponepage/main',
],
function(
    $,
    Main
) {
    var root = $('#format-aruponepage-{{uniqid}}');
    Main.init(root, {{contextid}});
});
{{/js}}
