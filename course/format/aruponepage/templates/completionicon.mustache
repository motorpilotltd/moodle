{{!
    @template format_aruponepage/completionicon

    This template renders action menu for each course.

    Example context (json):
    {
        "hascompletion": true,
        "editing": false,
        "self": true,
        "auto": false,
        "imgalt": "completed when ...",
        "newstate": 1,
        "mod": {
            "id": 254,
            "name": "Activity One",
            "courseid": 3,
            "completionicon": "manual-n",
            "checked": false,
            "sectionnumber": 2
        }
    }
}}
{{#hascompletion}}
    {{#editing}}
        {{#self}}
            <div class="checkbox">
                <div class="checkbox-icon iconlarge nomargin">
                    {{#pix}}check-on-gray, format_aruponepage, {{imgalt}}{{/pix}}
                </div>
            </div>
        {{/self}}
        {{#auto}}
            <div class="checkbox">
                <div class="checkbox-icon iconlarge nomargin">
                    {{#pix}}check-on-dotted, format_aruponepage, {{imgalt}}{{/pix}}
                </div>
            </div>
        {{/auto}}
    {{/editing}}
    {{^editing}}
        {{#self}}


        <span class="switch"
            data-region="completioncheck"
            data-targetstate="{{{newstate}}}"
            data-modulename="{{{mod.name}}}"
            data-module="{{{mod.id}}}"
            data-courseid="{{courseid}}"
            {{#reloadonchange}}
                data-reloadonchange="1"
            {{/reloadonchange}}
            data-image="{{completionicon}}"
            data-checked="{{#checked}}1{{/checked}}{{^checked}}0{{/checked}}"
            data-sectionnumber="{{sectionnumber}}">
            <input class="checkbox checkboxonepage {{#checked}}checked{{/checked}}" data-region="completioncheck"
                {{#checked}}checked{{/checked}}
            >
            <label></label>
        </span>

        {{/self}}
        {{#auto}}
            <div class="checkbox">
                {{#checked}}
                <div class="checkbox-icon iconlarge nomargin">
                    {{#pix}}check-green-dotted, format_aruponepage, {{imgalt}}{{/pix}}
                </div>
                {{/checked}}
                {{^checked}}
                <div data-region="checkoff" class="checkbox-icon iconlarge nomargin {{#checked}}hidden{{/checked}}">
                    {{#pix}}check-off-dotted, format_aruponepage, {{imgalt}}{{/pix}}
                </div>
                {{/checked}}
            </div>
        {{/auto}}
    {{/editing}}
{{/hascompletion}}
