{{!
    @template format_aruponepage/editactivity

    This template renders action menu for each course.

    Example context (json):
    {
        "controls": [
            {
                "url": "http://moodle.site/course/mod.php?hide=103",
                "attributes": "data-action='hide'",
                "string": "hide",
                "alt": "hide",
                "icon": {
                    "pix": "t/hide"
                }
            }
        ]
    }
}}
<div class="activityactions dropdown align-self-center ml-auto mr-0">
    <a aria-expanded="true" data-toggle="dropdown" href="">
        {{#pix}} i/settings, core, {{#str}} edit, moodle {{/str}}{{/pix}}
    </a>

    <div class="dropdown-menu dropdown-menu-right">
        {{#controls}}
        <a class="dropdown-item" href="{{url}}" title="{{string}}" {{{attributes}}}>
            <span class="text-primary">{{#pix}} {{icon.pix}}, core {{/pix}}</span>
            {{{string}}}
        </a>
        {{/controls}}
    </div>
</div>