{{!
    @template format_aruponepage/editsection

    This template renders action menu for each course.

    Example context (json):
    {
        "addcm": "modchooser modal",
        "sectionmenu": "section dropdown menu"
    }
}}
<div class="actions dropdown align-self-center ml-auto mr-2 mt-2 d-flex">
    <span class="section-modchooser mr-lg-2">
        <span class="section-modchooser-link">
            <span class="section-modchooser-text p-1">
                {{#pix}} e/insert, core, {{#str}} addresourceoractivity, moodle {{/str}} {{/pix}}
            </span>
        </span>
    </span>
    {{{sectionmenu}}}
</div>
<div class="addcm">
    {{{addcm}}}
</div>
