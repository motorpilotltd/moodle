<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/costcentre/db" VERSION="20160803" COMMENT="XMLDB file for local_costcentre tables"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_costcentre" COMMENT="Cost centre settings">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="costcentre" TYPE="char" LENGTH="6" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="enableappraisal" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="groupleaderactive" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="appraiserissupervisor" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="costcentre" UNIQUE="true" FIELDS="costcentre"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_costcentre_user" COMMENT="Cost centre user mapping">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="costcentre" TYPE="char" LENGTH="6" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="permissions" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="costcentre" UNIQUE="false" FIELDS="costcentre"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>