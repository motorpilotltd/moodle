
<h2>{{#str}}feedbackrequests:heading, local_onlineappraisal{{/str}}</h2>
<p>{{#str}}feedbackrequests:description, local_onlineappraisal{{/str}}</p>
<h3>{{#str}}feedbackrequests:outstanding, local_onlineappraisal{{/str}}</h3>

<table class="generaltable">
    <thead>
        <tr>
            <th>{{#str}}feedbackrequests:th:requestfor, local_onlineappraisal{{/str}}</th>
            <th>{{#str}}feedbackrequests:th:requestby, local_onlineappraisal{{/str}}</th>
            <th>{{#str}}feedbackrequests:th:requestdate, local_onlineappraisal{{/str}}</th>
            <th>{{#str}}feedbackrequests:th:facetofacedate, local_onlineappraisal{{/str}}</th>
            <th class="text-center">{{#str}}feedbackrequests:th:facetofaceheld, local_onlineappraisal{{/str}}</th>
            <th>{{#str}}feedbackrequests:th:completeddate, local_onlineappraisal{{/str}}</th>
            <th class="text-center w-1">{{#str}}feedbackrequests:th:actions, local_onlineappraisal{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#outstanding}}
            <tr>
                <td>{{ufirstname}} {{ulastname}}</td>
                <td>{{requested}}</td>
                <td>{{feedbackcreated}}</td>
                <td>{{facetofacedate}}</td>
                <td class="text-center">
                {{#face_to_face_held}}
                    <i class="fa fa-check text-success"></i>
                {{/face_to_face_held}}
                </td>
                <td>{{completeddate}}</td>
                <td class="text-center w-1">
                    <a href="{{{feedbacklink}}}" class="btn btn-small btn-success email-copy">
                        {{#continuefeedback}}
                            {{#str}}feedbackrequests:continuefeedback, local_onlineappraisal{{/str}}
                        {{/continuefeedback}}

                        {{^continuefeedback}}
                            {{#str}}feedbackrequests:submitfeedback, local_onlineappraisal{{/str}}
                        {{/continuefeedback}}
                    </a>
                </td>
            </tr>
        {{/outstanding}}
        {{^outstanding}}
            <tr>
                <td colspan="7">
                    <div class="alert alert-warning m-0" role="alert">
                        <i class="fa fa-exclamation-triangle"></i>
                        {{#str}}feedbackrequests:norequests, local_onlineappraisal{{/str}}
                    </div>
                </td>
            </tr>
        {{/outstanding}}
    </tbody>
</table>

