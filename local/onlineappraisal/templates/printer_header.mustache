{{!
    @template local_onlineappraisal/printer_header

    PDF Header
}}
<br />
<div>
    <table>
        <tr>
            <td colspan="3">
                <div style="text-align:centre; display:inline-block; color:red;">{{! ***Avoid whitespace***
                    }}{{{warning}}}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div style="text-align:left; display:inline-block; color:black;">{{! ***Avoid whitespace***
                    }}{{appraisal.appraisee.firstname}} {{appraisal.appraisee.lastname}} {{#str}}pdf:header:appraisal, local_onlineappraisal{{/str}}
