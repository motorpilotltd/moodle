                    <br />{{#str}}pdf:header:helddate, local_onlineappraisal{{/str}} {{appraisal.held_date}}
                </div>
            </td>
            <td>
                <div style="text-align:center; display:inline-block; width:75%; color:black;">
                    <h3 style="color:red">{{#str}}pdf:header:confidential, local_onlineappraisal{{/str}}</h3>
                    {{currentstatus}}{{#archived}} ({{.}}){{/archived}}
                </div>
            </td>
            <td>
                <div style="text-align:right; color:black;">
                    <img src="{{logopath}}">
                </div>
            </td>
        </tr>
    </table>
</div>