{{#canadd}}
<form id="oa-comment-form" class="form-inline mb-3 align-items-end">
    <input type="hidden" name="sesskey" value="{{{sesskey}}}" />
    <input type="hidden" name="c" value="comments" />
    <input type="hidden" name="a" value="submit_comment" />
    <input type="hidden" name="appraisalid" value="{{{appraisalid}}}" />
    <input type="hidden" name="view" value="{{{view}}}" />
    <div class="form-group flex-fill">
        <label for="oa-comment-input" class="control-label sr-only">{{#str}}comment, local_onlineappraisal{{/str}}</label>
        <textarea id="oa-comment-input" name="comment" class="form-control" placeholder="{{#str}}comment:addnewdots, local_onlineappraisal{{/str}}" rows="1"></textarea>
        <span class="help-block hidden">{{#str}}error:comment:validation, local_onlineappraisal{{/str}}</span>
    </div>
    <div class="ml-auto">
        <button id="oa-comment-submit" type="submit" class="btn btn-secondary" title="{{#str}}form:add, local_onlineappraisal{{/str}}">
            <i class="fa fa-plus fa-lg"></i><span class="sr-only">{{#str}}form:add, local_onlineappraisal{{/str}}</span>
        </button>
    </div>
</form>
{{/canadd}}
<div class="alert alert-dismissible oa-comments-alert hidden" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <div class="alert-message"></div>
</div>
<div class="oa-comments">
    <ul class="list-unstyled">
    {{#comments}}
        {{>local_onlineappraisal/comment}}
    {{/comments}}
    </ul>
    <p class="hidden text-center"><button class="btn btn-outline-secondary rounded oa-comments-more">{{#str}}comment:showmore, local_onlineappraisal{{/str}}</button></p>
</div>