<h2>{{heading}}</h2>
<div class="m-b-15">
    {{toptext}}
</div>
{{^isappraisee}}
<form id="oa-index-search" class="hidden form-horizontal m-b-10">
    <input type="hidden" name="page" value="{{page}}" />
    <label class="sr-only" for="oa-filter-select">{{#ishrleader}}{{#str}}index:search:hrleader, local_onlineappraisal{{/str}}{{/ishrleader}}{{^ishrleader}}{{#str}}index:search, local_onlineappraisal{{/str}}{{/ishrleader}}</label>
    <select name="appraisee" id="oa-index-search-select" class="form-control" autocomplete="off" data-placeholder="{{#ishrleader}}{{#str}}index:search:hrleader, local_onlineappraisal{{/str}}{{/ishrleader}}{{^ishrleader}}{{#str}}index:search, local_onlineappraisal{{/str}}{{/ishrleader}}">
        {{{searchoption}}}
    </select>
    <button type="submit" value="1" name="search" class="btn btn-primary">{{#str}}form:go, local_onlineappraisal{{/str}}</button>
    <button type="submit" value="0" name="search" class="btn btn-default">{{#str}}form:clear, local_onlineappraisal{{/str}}</button>
</form>
{{/isappraisee}}
{{^showtables}}
<div class="alert alert-warning" role="alert">
    <i class="fa fa-exclamation-triangle"></i>
    {{#str}}index:notables, local_onlineappraisal{{/str}}
</div>
{{/showtables}}
{{#showtables}}
<h3>{{#str}}appraisals:current, local_onlineappraisal{{/str}}</h3>
{{#current}}
    {{^isappraisee}}
    <form id="oa-filter" class="hidden form-inline pull-right">
        <div class="form-group">
            <label class="sr-only" for="oa-filter-select">{{#str}}form:filter, local_onlineappraisal{{/str}}</label>
            <select class="form-control m-b-0" id="oa-filter-select" autocomplete="off">
                <option value="0">{{#str}}form:all, local_onlineappraisal{{/str}}</option>
                {{^ishrleader}}
                <option value="action">{{#str}}index:awaiting, local_onlineappraisal{{/str}}</option>
                {{/ishrleader}}
                <optgroup label="Statuses">
                    <option value="1">{{#str}}status:1, local_onlineappraisal{{/str}}</option>
                    <option value="2">{{#str}}status:2, local_onlineappraisal{{/str}}</option>
                    <option value="3">{{#str}}status:3, local_onlineappraisal{{/str}}</option>
                    <option value="4">{{#str}}status:4, local_onlineappraisal{{/str}}</option>
                    <option value="5">{{#str}}status:5, local_onlineappraisal{{/str}}</option>
                    <option value="6">{{#str}}status:6, local_onlineappraisal{{/str}}</option>
                    <option value="7">{{#str}}status:7, local_onlineappraisal{{/str}}</option>
                </optgroup>
            </select>
        </div>
    </form>
    {{/isappraisee}}
    {{>local_onlineappraisal/index_table}}
{{/current}}
{{^current}}
<div class="alert alert-warning" role="alert">
    <i class="fa fa-exclamation-triangle"></i>
    {{#isappraisee}}
        {{#str}}appraisals:nocurrent:you, local_onlineappraisal{{/str}}
    {{/isappraisee}}
    {{^isappraisee}}
        {{#issearch}}
            {{#str}}appraisals:nocurrent:search, local_onlineappraisal{{/str}}
        {{/issearch}}
        {{^issearch}}
            {{#str}}appraisals:nocurrent, local_onlineappraisal{{/str}}
        {{/issearch}}
    {{/isappraisee}}
</div>
{{/current}}

<h3>{{#str}}appraisals:archived, local_onlineappraisal{{/str}}</h3>
{{#cycleselect}}<div class="clearfix">{{{cycleselect}}}</div>{{/cycleselect}}
{{#archived}}
    {{>local_onlineappraisal/index_table}}
    {{#toggleleaversurl}}
    <div class="text-right">
        <a href="{{{toggleleaversurl}}}" class="btn btn-default btn-xs">{{toggleleaversstr}}</a>
    </div>
    {{/toggleleaversurl}}
{{/archived}}
{{^archived}}
<div class="alert alert-warning" role="alert">
    <i class="fa fa-exclamation-triangle"></i>
    {{#isappraisee}}
        {{#str}}appraisals:noarchived:you, local_onlineappraisal{{/str}}
    {{/isappraisee}}
    {{^isappraisee}}
        {{#issearch}}
            {{#str}}appraisals:noarchived:search, local_onlineappraisal{{/str}}
        {{/issearch}}
        {{#cycleselect}}
            {{#str}}appraisals:noarchived:cycle, local_onlineappraisal{{/str}}
        {{/cycleselect}}
        {{^issearch}}{{^cycleselect}}
            {{#str}}appraisals:noarchived, local_onlineappraisal{{/str}}
        {{/cycleselect}}{{/issearch}}
    {{/isappraisee}}
</div>
{{/archived}}
{{/showtables}}