{{!
    @template local_catalogue/nav-course-types

    This template renders display dropdown.

    Example context (json):
    {
        "cards": true,
        "list": false,
        "summary": false
    }
}}
<button class="d-md-none btn btn-dark closefilters" data-action="close-filters">
    <i class="fa fa-2x fa-times"></i>
</button>
<div class="coursetypes bg-light p-3" data-region="metadata">
    <form class="mform">
        <h4 class="font-italic">{{#str}}refineby, local_catalogue{{/str}}</h4>

        <div class="border-bottom border-dark mt-2 mb-4"></div>

        <div class="filter-types regions-types">
            {{<local_catalogue/nav-course-types-toggle}}
                {{$title}}{{#str}}region, local_catalogue{{/str}}{{/title}}
            {{/local_catalogue/nav-course-types-toggle}}
            {{#regions}}
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="checkregion{{id}}"
                    data-action="select-filter" data-type="region" data-value="{{id}}"
                >
                <label class="custom-control-label" for="checkregion{{id}}">{{name}}</label>
            </div>
            {{/regions}}
        </div>

        {{#hassubcategories}}
            <div class="filter-types subregions-types">
                <div class="border-bottom border-dark mt-3 mb-4"></div>

                <div class="subcatset subcatshowsubset" data-region="subcategoryfilters">
                {{#subcategories}}
                    {{#active}}
                        <div class="subcategories">
                            {{<local_catalogue/nav-course-types-toggle}}
                                {{$title}}{{name}}{{/title}}
                            {{/local_catalogue/nav-course-types-toggle}}
                            {{#subsub}}
                                <div class="subcat">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="checksubsub{{id}}"
                                            data-action="select-filter" data-type="subsub" data-value="{{id}}"
                                        >
                                        <label class="custom-control-label" for="checksubsub{{id}}">{{name}}</label>
                                    </div>
                                </div>
                            {{/subsub}}
                            {{#hasmoresubcat}}
                                <a href="#" data-action="loadmore" class="ml-4 subcatloadmore mt-1" data-id="{{id}}">
                                    {{#str}}loadmore, local_catalogue{{/str}}
                                </a>
                            {{/hasmoresubcat}}
                        </div>
                    {{/active}}
                {{/subcategories}}
                </div>
            </div>
        {{/hassubcategories}}

        <div class="border-bottom border-dark mt-3 mb-4"></div>

        <div class="filter-types level-types">
            <div class="filter-section">
                {{<local_catalogue/nav-course-types-toggle}}
                    {{$title}}{{#str}} filter:level, local_catalogue {{/str}}{{/title}}
                {{/local_catalogue/nav-course-types-toggle}}
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="level-Awareness"
                        data-action="select-filter" data-type="level" data-value="awareness"
                    >
                    <label class="custom-control-label" for="level-Awareness">{{#str}}awareness, local_catalogue{{/str}}</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="level-Practitioner"
                        data-action="select-filter" data-type="level" data-value="practitioner"
                    >
                    <label class="custom-control-label" for="level-Practitioner">{{#str}}practitioner, local_catalogue{{/str}}</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="level-Mastery"
                        data-action="select-filter" data-type="level" data-value="mastery"
                    >
                    <label class="custom-control-label" for="level-Mastery">{{#str}}mastery, local_catalogue{{/str}}</label>
                </div>
            </div>
        </div>

        <div class="border-bottom border-dark mt-3 mb-4"></div>

        <div class="filter-types methodology-types">
            <div class="filter-section">
                {{<local_catalogue/nav-course-types-toggle}}
                    {{$title}}{{#str}} filter:methodology, local_catalogue {{/str}}{{/title}}
                {{/local_catalogue/nav-course-types-toggle}}

                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="methodology-Classroom"
                        data-action="select-filter" data-type="methodology" data-value="classroom"
                    >
                    <label class="custom-control-label" for="methodology-Classroom">{{#str}}classroom, local_catalogue{{/str}}</label>
                </div>

                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="methodology-eLearning"
                        data-action="select-filter" data-type="methodology" data-value="elearning"
                    >
                    <label class="custom-control-label" for="methodology-eLearning">{{#str}}elearning, local_catalogue{{/str}}</label>
                </div>

                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="methodology-LearningBurst"
                        data-action="select-filter" data-type="methodology" data-value="learningburst"
                    >
                    <label class="custom-control-label" for="methodology-LearningBurst">{{#str}}learningburst, local_catalogue{{/str}}</label>
                </div>

                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="methodology-MastersProgramme"
                        data-action="select-filter" data-type="methodology" data-value="mastersprogramme"
                    >
                    <label class="custom-control-label" for="methodology-MastersProgramme">{{#str}}mastersprogramme, local_catalogue{{/str}}</label>
                </div>

                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="methodology-Other"
                        data-action="select-filter" data-type="methodology" data-value="other"
                    >
                    <label class="custom-control-label" for="methodology-Other">{{#str}}other, local_catalogue{{/str}}</label>
                </div>
            </div>
        </div>

        <div class="border-bottom border-dark mt-3 mb-4"></div>

        <div class="filter-types stt-types">
            <div class="filter-section">
            {{<local_catalogue/nav-course-types-toggle}}
                {{$title}}{{#str}} filter:702010, local_catalogue {{/str}}{{/title}}
            {{/local_catalogue/nav-course-types-toggle}}
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="702010-70"
                        data-action="select-filter" data-type="stt" data-value="70"
                    >
                    <label class="custom-control-label" for="702010-70">70</label>
                </div>

                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="702010-20"
                        data-action="select-filter" data-type="stt" data-value="20"
                    >
                    <label class="custom-control-label" for="702010-20">20</label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="702010-10"
                        data-action="select-filter" data-type="stt" data-value="10"
                    >
                    <label class="custom-control-label" for="702010-10">10</label>
                </div>
            </div>
        </div>
    </form>
</div>