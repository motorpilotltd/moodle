{{!
    @template local_catalogue/nav-search-courses

    This template renders grouping dropdown.

    Example context (json):
    {}
}}
<div class="input-group input-group-lg mb-1" data-region="search-container">
 	<input type="text" class="form-control" placeholder="search course catalogue" aria-label="search course catalogue" aria-describedby="button-addon2" data-action="search-catalogue" value="{{{searchword}}}">
	<div class="input-group-append">
		<button class="btn btn-primary" type="button" id="button-addon2" data-action="search-button">
			<i class="fa fa-search"></i>
		</button>
	</div>
</div>