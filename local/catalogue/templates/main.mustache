{{!
    @template local_catalogue/main

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}



<div id="local-catalogue-{{uniqid}}" class="local-catalogue block-cards position-relative" data-region="myoverview" role="navigation">

    {{> local_catalogue/categories }}

    <div class="container-fluid p-0 mt-2">
        <div class="row">
        <div class="col-md-3">
            <div class="filters" data-region="catfilters">
                <aside class="backdrop" aria-hidden="true"></aside>
                {{> local_catalogue/nav-course-types }}
            </div>
        </div>
        <div class="col-md-9">
            <div data-region="filter" class="d-flex flex-wrap flex-md-nowrap align-items-center mb-3" aria-label="{{#str}} aria:controls, local_catalogue {{/str}}">

                {{> local_catalogue/nav-search-courses }}

                {{> local_catalogue/nav-display-selector }}


                <div class="showfiltersaction" data-region="select-filters">
                    <span class="fa-stack fa-2x icon-hover" aria-controls="sectionnav" data-action="showfilters" role="button">
                        <i class="fas fa-circle fa-stack-2x text-primary showhover"></i>
                        <i class="fa fa-filter fa-stack-1x fa-inverse"></i>
                    </span>
                    <div class="sr-only">
                        {{#str}}filter, local_catalogue{{/str}}
                    </div>
                </div>
            </div>
            <div id="courses-view-{{uniqid}}"
                class="main-view"
                data-region="courses-view"
                data-display="{{view}}"
                data-prev-display="{{view}}"
                data-nocoursesimg="{{nocoursesimg}}"
                data-category="{{categoryid}}"
                data-metadata='{{filter}}'
                data-search="{{searchword}}"
                >

                <div data-region="course-view-content">

                </div>
            </div>
            {{> local_catalogue/placeholders }}
        </div>
    </div>
</div>
{{#js}}
require(
[
    'jquery',
    'local_catalogue/main'
],
function(
    $,
    Main
) {
    var root = $('#local-catalogue-{{uniqid}}');
    Main.init(root);
});
{{/js}}
