{{!
    @template block_myoverview/view-cards

    This template renders the cards view for the myoverview block.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "coursecategory": "Miscellaneous"
            }
        ]
    }
}}

<div class="card-deck catalogue-card-deck {{$classes}}{{/classes}}" data-region="card-deck" role="list">
{{#courses}}
    <div class="card dashboard-card arupavcminfo mt-0 mb-2 {{advertclass}}" role="listitem"
        data-region="course-content"
        data-course-id="{{{id}}}">
        <div class="av_image_wrapper position-relative">
            {{#courseimage}}
            <div class="courseimage-bg" style="background-image: url({{{courseimage}}})">
            </div>
            {{/courseimage}}
            {{^courseimage}}
            <div class="courseimage-bg" style="background-image: url({{{placeholderimage}}})">
            </div>
            {{/courseimage}}
            {{#icon}}
                <div class="adverticon-container position-absolute p-2" style="left: 0; bottom: 0;">
                    <img src="{{{ icon }}}" class="adverticon">
                </div>
            {{/icon}}
        </div>
        <div class="card-body av_metadata_border px-2 course-info-container" id="course-info-container-{{id}}-{{uniqid}}">
            <div class="d-flex align-items-start">
                <div class="coursename mr-2 text-truncate">
                    <div class="sr-only">
                        <div class="text-muted muted d-flex w-100 mb-1 text-truncate hidden" style="flex-flow:wrap;">
                            {{$coursecategory}}{{/coursecategory}}
                        </div>
                    </div>
                    <span class="sr-only">
                        {{#str}}aria:coursename, core_course{{/str}}
                    </span>
                    <a href="{{viewurl}}" class="stretched-link text-text">{{$coursename}}{{/coursename}}</a>
                </div>
            </div>
            {{#summary}}
            <div class="small text-text pt-2 text-muted" style="max-height: 100px; overflow: hidden">
                {{{summary}}}
            </div>
            {{/summary}}
        </div>
        <div class="card-footer px-2 pt-1 bg-white text-muted border-0">
            <div class="d-flex">
                <div class="w-50 text-truncate">
                    {{methodologyname}}
                </div>
                <div class="w-50 text-truncate text-right">
                    {{#duration}}
                        {{duration}}<i class="icon fa fa-clock fa-fw ml-2"></i>
                    {{/duration}}
                </div>
            </div>
        </div>
    </div>
{{/courses}}
</div>
