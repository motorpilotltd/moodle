{{!
    @template local_catalogue/view-list

    This template renders the list view for the myoverview block.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "coursecategory": "Miscellaneous"
            }
        ]
    }
}}

<ul class="list-group catalogue-list-group">
{{#courses}}
    <li class="list-group-item course-listitem arupavcminfo mb-3 p-0 border-0 {{advertclass}}"
        data-region="course-content"
        data-course-id="{{{id}}}">
        <div class="d-flex">
            <div class="listimage d-flex">
                <div class="av_image_wrapper position-relative">
                    {{#courseimage}}
                    <div class="courseimage-bg h-100" style="background-image: url({{{courseimage}}})">
                    </div>
                    {{/courseimage}}
                    {{^courseimage}}
                    <div class="courseimage-bg h-100" style="background-image: url({{{placeholderimage}}})">
                    </div>
                    {{/courseimage}}
                    {{#icon}}
                        <div class="adverticon-container position-absolute p-2" style="left: 0; bottom: 0;">
                            <img src="{{{ icon }}}" class="adverticon">
                        </div>
                    {{/icon}}
                    <div class="av_metadata_border w-100 position-absolute" style="left: 0; bottom: 0;">
                    </div>
                </div>
            </div>
            <div class="flex-fill d-flex flex-column border courseinfocontainer" id="course-info-container-{{id}}-{{uniqid}}">
                <div class="coursename mr-2">
                    <div class="sr-only">
                        {{#str}}aria:coursename, local_catalogue{{/str}}
                    </div>
                    <a href="{{viewurl}}" class="stretched-link text-text">
                        <span class="multiline">
                            {{#shortentext}}50, {{{fullname}}} {{/shortentext}}
                        </span>
                    </a>
                </div>
                <div class="flex-fill">
                    <div class="small text-text pt-2 text-muted position-relative h-100 fadeout-container">
                        {{{summary}}}
                    </div>
                </div>
                <div class="d-flex text-muted pt-1">
                    <div class="w-50 text-truncate">
                        {{methodology}}
                    </div>
                    <div class="w-50 text-truncate text-right">
                        {{#duration}}
                            {{duration}}<i class="icon fa fa-clock fa-fw ml-2"></i>
                        {{/duration}}
                    </div>
                </div>
            </div>
        </div>
    </li>
{{/courses}}
</ul>
