{{!
    @template theme_arupboost/frontpage_content

    This template renders the header.

    Example context (json):
    {
    }
}}
<div style="background-image: url({{{ output.theme_header_image }}}); background-size: cover; background-position: right;">
    <div class="homeheading container-fluid">
        <h1 class="text-shadow-small">{{#str}}frontpage:title, theme_arupboost{{/str}}</h1>
        <div class="d-flex w-100">
            <div class="text-shadow-small text-large">{{#str}}frontpage:subtitle, theme_arupboost{{/str}}</div>
            {{#settingsmenu}}
            <div class="ml-auto p-2 bg-light border-0">
                {{{ settingsmenu }}}
            </div>
            {{/settingsmenu}}
        </div>
    </div>
    <div class="homesearch pt-2">
        <form class="mform w-100 container-fluid d-flex align-items-center" action="{{{wwwroot}}}/local/catalogue/index.php">
            <div class="col-12 col-md-8 mx-auto input-group bg-gray030 p-3">
                <input
                    type="text"
                    name="search"
                    class="form-control form-control-lg font-weight-normal border-0"
                    placeholder="{{#str}} frontpage:search, theme_arupboost {{/str}}"
                    aria-label="{{#str}} frontpage:search, theme_arupboost {{/str}}"
                    data-region="search-input"
                >
                <input
                    type="hidden"
                    name="context"
                    value="{{{output.pagecontextid}}}"
                >
                <input
                    type="hidden"
                    name="page"
                    value="search"
                >
                <input
                    type="hidden"
                    name="showcatid"
                    value=-1
                >
                <div class="input-group-append">
                    <button
                        class="btn btn-blue030 btn-lg"
                        type="submit"
                        data-action="search"
                    >
                        <span data-region="search-icon-container">
                            {{#pix}} a/search, core {{/pix}}
                        </span>
                        <span class="hidden" data-region="loading-icon-container">
                            {{> core/loading }}
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

