{{!
    @template theme_arupboost/footer_links

    This template renders the footer links.

    Example context (json):
    {
        "date": "2019",
        "footerlinks": {
            "<a href='http://arup.com/help'>Help</a>
        }
    }
}}
<div class="aruplinks h-100 d-flex flex-column">
    <ul class="footerlinks list-unstyled m-0 italicf flex-fill">
        {{#footerlinks}}
            <li class="pb-1">
                {{{link}}}
            </li>
        {{/footerlinks}}
    </ul>
</div>