{{!
    @template theme_arupboost/megamenu

    This template renders the theme's megamenu.

    Example context (json):
    {}
}}
<div id="timezonemodal" class="modal fade" id="updatetimezone" tabindex="-1" role="dialog" data-region="timezone-modal" style="margin-top: 100px;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body text-center p-20">
                    <button type="button" class="btn btn-default btn-sm text-dimmed pull-right" data-dismiss="modal" aria-label="Close">
                        {{#pix}} e/cancel, core {{/pix}}
                    </button>
                <h1 class="m-t-0 m-b-20">{{#str}} updatetimezone:heading, theme_arupboost {{/str}}</h1>
                <p class="m-b-20 text-dimmed">{{#str}} updatetimezone:paragraph, theme_arupboost {{/str}}</p>
                <form class="mform">
                    <select name="timezone" class="form-control custom-select" id="timezoneselector" data-region="timezone-selector">
                        {{#output.timezone_countries}}
                            <option value="{{timezone}}">{{name}}</option>
                        {{/output.timezone_countries}}
                    </select>
                    <span id="updatetimezonesuccess" class="hidden text-success" data-region="updatetimezone-success">
                        {{#pix}} t/check, core {{/pix}}
                    </span>
                </form>
            </div>
        </div>
    </div>
</div>