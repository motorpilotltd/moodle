<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/dynamic_cohorts/db" VERSION="20170127" COMMENT="XMLDB file for Moodle dynamic cohort plugin"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="certif_exemptions" COMMENT="Table for certification exemptions">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="certifid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Certification ID"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="User ID"/>
                <FIELD NAME="reason" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Exemption reason"/>
                <FIELD NAME="timeexpires" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Time when exemption expires"/>
                <FIELD NAME="modifierid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="User ID who has modified or add "/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Time modified"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Time created"/>
                <FIELD NAME="archived" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT=""/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="certifid" UNIQUE="false" FIELDS="certifid" COMMENT="Index for certifid"/>
                <INDEX NAME="userid" UNIQUE="false" FIELDS="userid" COMMENT="Index for userid"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="certif_links" COMMENT="Table for certification report links">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="Link name"/>
                <FIELD NAME="linkurl" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Report link"/>
                <FIELD NAME="geographicregionid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Geographic Region ID"/>
                <FIELD NAME="actualregionid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Actual Region ID"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="geographicregionid" UNIQUE="false" FIELDS="geographicregionid" COMMENT="Index for geographicregionid"/>
                <INDEX NAME="actualregionid" UNIQUE="false" FIELDS="actualregionid" COMMENT="Index for actualregionid"/>
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>