    <div class="modal-dialog" role="document">
        <div class="modal-content" role="document">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="{{#str}}modal:close, block_certification_report{{/str}}"><span aria-hidden="true">&times;</span></button>
